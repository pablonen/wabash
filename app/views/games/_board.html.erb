<svg viewBox="0 0 100 100" class="board">
  <defs>
    <g id="hex">
      <polygon stroke="#000000" stroke-width="0.5" points="5, -9 -5,-9 -10, 0 -5, 9 5, 9 10, 0" />
    </g>
  </defs>

  <g class="hex-wrap">
    <% @game.grid_enumerator do |x,y,i,j| %>
      <use href="#hex" transform="translate(<%=x%>,<%=i % 2 == 0 ? y : y + Game::HEX_H / 2 %>)" /> 
      <% if @game.built?(Game::COL_ALPHA[i]+j.to_s) %>
        <rect x="<%=x%>" y="<%=y%>" width=3 height=3 fill="violet" />
      <% end %>
    <% end %> 
  </g>
</svg>

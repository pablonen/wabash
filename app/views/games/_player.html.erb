<article class="player">
  <%= content_tag :header, player[:name], class: [{ active: player[:acting] }] %>
  <section class="player-sheet">
    <div class="player-money">
      <%= player[:money] %>
    </div>

    <div class="player-shares">
      <table>
        <caption>Shares</caption>
        <thead>
          <tr>
            <% player[:shares].each do |company, _| %>
              <td><%= company.capitalize %></td>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% player[:shares].each do |_, number| %>
              <td><%= number %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</article>

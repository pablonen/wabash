<article class="company <%= company[:color] %>">
  <header><%= company[:color].capitalize %></header>
    <dl class="sheet">
      <dt>Money</dt>
      <dd class="money"><%= company['money'] %></dd>
      <dt>Shares</dt>
      <dd><%= company['shares'] - company['shares_sold'] %></dd>
      <dt>Tracks</dt>
      <dd><%= company['track'] %></dd>
      <dt>Income</dt>
      <dd><%= company['income'] %></dd>
      <dt>Per share</dt>
      <dd><%= @game.company_income_per_share(company[:color]) %></dd>
    </dl>
</article>

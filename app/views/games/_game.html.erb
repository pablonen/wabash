<div id="<%= dom_id game %>">
  <p>
    <strong>Name:</strong>
    <%= game.name %>
  </p>

  <p>
    <strong>Min players:</strong>
    <%= game.min_players %>
  </p>

  <p>
    <strong>Max players:</strong>
    <%= game.max_players %>
  </p>

  <p>
    <strong>Joined:</strong>
    <ol>
      <% game.game_players.each do |game_player| %>
        <li><%= game_player.user_id %> seat:<%= game_player.seat %></li>
      <% end %>
    </ol>
  </p>

  <p>
    <strong>State:</strong>
    <%= game.state %>
  </p>

  <p>
    <strong>Board:</strong>
    <%= render 'board', locals: {game: @game} %>
  </p>
</div>
